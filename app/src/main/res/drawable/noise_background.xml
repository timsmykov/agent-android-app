<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep dark base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_dark" />
        </shape>
    </item>

    <!-- Indigo -> Fuchsia subtle vignette -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="30%"
                android:centerY="25%"
                android:startColor="#221A1F4F"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="80%"
                android:centerY="80%"
                android:startColor="#22FF4FD8"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Glass grain overlay via tiny noise using dithered gradient -->
    <item android:gravity="fill">
        <shape android:shape="rectangle" android:dither="true">
            <gradient
                android:type="linear"
                android:startColor="#05000000"
                android:centerColor="#00000000"
                android:endColor="#05000000"
                android:angle="45"/>
        </shape>
    </item>
</layer-list>
